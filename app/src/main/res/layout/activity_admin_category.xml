<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper4"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add new Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />



    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/slogan_category"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        >
        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/apple"
            />

        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/banana"
            />
        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watermelon"
            />
        <ImageView
            android:id="@+id/sweather"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cake"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear1_category_layout"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        >
        <ImageView
            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cake"
            />

        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/apple"
            />
        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/banana"
            />
        <ImageView
            android:id="@+id/shoess"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watermelon"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear2_category_layout"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        >
        <ImageView
            android:id="@+id/headphoness_handsfree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watermelon"
            />

        <ImageView
            android:id="@+id/laptops_pc"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/banana"
            />
        <ImageView
            android:id="@+id/watches"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cake"
            />
        <ImageView
            android:id="@+id/mobiles_phones"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/apple"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="false"
        />


</RelativeLayout>